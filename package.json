{
  "name": "sprockett-sidekick",
  "version": "1.0.0",
  "description": "Sprockett voice print system for personalized AI coaching",
  "main": "main.js",
  "scripts": {
    "start": "node server/server-clean.js",
    "dev": "nodemon server/server-clean.js",
    "electron-dev": "NODE_ENV=development electron .",
    "electron-build": "cd desktop-app && npm run build && cd .. && electron .",
    "build": "cd desktop-app && npm run build",
    "dist": "npm run build && electron-builder",
    "dist:mac": "npm run build && electron-builder --mac",
    "pack": "npm run build && electron-builder --dir",
    "server:dev": "NODE_ENV=development nodemon server/server-clean.js",
    "deploy": "vercel --prod"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "keywords": [
    "ai",
    "coaching",
    "voice",
    "react"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@supabase/supabase-js": "^2.49.10",
    "dotenv": "^16.5.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.0",
    "form-data": "^4.0.0",
    "formdata-node": "^6.0.3",
    "helmet": "^8.1.0",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^2.7.0"
  },
  "devDependencies": {
    "@vercel/node": "^3.0.0",
    "concurrently": "^8.2.2",
    "electron": "^37.2.3",
    "electron-builder": "^25.1.8",
    "nodemon": "^3.0.1"
  },
  "build": {
    "appId": "com.sprockett.sidekick",
    "productName": "Sprockett Sidekick",
    "directories": {
      "output": "release"
    },
    "files": [
      "main.js",
      "preload.js",
      "desktop-app/dist/**/*",
      "server/**/*",
      "api/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.business",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "entitlements.mac.plist",
      "icon": "desktop-app/src/assets/Sprockett_huge.png"
    }
  }
}
